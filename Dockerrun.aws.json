{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions":[
        {
            "name": "client",
            "image": "rezakay/multi-client",
            "hostname": "client",
            "essential": false,
            "memory": 128
        },
        {
            "name": "server",
            "image": "rezakay/multi-server",
            "hostname": "api",
            "essential": false,
            "memory": 128
        },
        {
            "name": "worker",
            "image": "rezakay/multi-worker",
            "hostname": "worker",
            "essential": false,
            "memory": 128
        },
        {
            "name": "nginx",
            "image": "rezakay/multi-nginx",
            "hostname": "worker",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80, 
                    "containerPort":80
                }
            ],
            "links": ["client","server"],
            "memory": 128
        }
    ]
}